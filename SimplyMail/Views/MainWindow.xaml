<Window x:Class="SimplyMail.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimplyMail.Views"
        xmlns:vm="clr-namespace:SimplyMail.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="473" Width="749">
    <Window.Resources>
        <DataTemplate x:Key="homeTemplate">
            <local:HomeControl/>
        </DataTemplate>
        <DataTemplate x:Key="loginTemplate">
            <local:LoginControl/>
        </DataTemplate>
        <local:ContentTemplateSelector
            x:Key="contentSelector"
            HomeTemplate="{StaticResource homeTemplate}"
            LoginTemplate="{StaticResource loginTemplate}"/>
    </Window.Resources>
    <Grid>
        <ContentControl ContentTemplateSelector="{StaticResource contentSelector}"
                        Content="{Binding MainContent}"/>
    </Grid>
</Window>
